# SalamatLab Environment Configuration Template
# Copy this file to .env.local for local development
# ⚠️ NEVER commit sensitive values to Git ⚠️

# Application Environment
VITE_APP_ENV=production
VITE_DEBUG=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_API_RETRIES=3

# Feature Flags
VITE_ENABLE_OTP=true
VITE_ENABLE_LOGGING=true
VITE_ENABLE_ANALYTICS=false

# =============================================
# DATABASE CONFIGURATION
# =============================================
# Set these in your hosting environment variables
DB_HOST=your_database_host
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASS=your_database_password

# =============================================
# SMS CONFIGURATION (SMS.ir)
# =============================================
# Get your API key from https://sms.ir/ panel
SMSIR_API_KEY=your_sms_api_key_here

# OTP Template for login/registration (from SMS.ir panel)
SMSIR_TEMPLATE_ID=your_otp_template_id
SMSIR_TEMPLATE_PARAM_NAME=Code

# Confirmation Templates (create these in SMS.ir panel)
CHECKUP_CONFIRM_TEMPLATE_ID=your_checkup_confirm_template_id
CHECKUP_CONFIRM_NAME_PARAM=NAME
CHECKUP_CONFIRM_TITLE_PARAM=CHECKUP

SMSIR_CONFIRM_TEMPLATE_ID=your_general_confirm_template_id
SMSIR_CONFIRM_PARAM_NAME=NAME

FEEDBACK_CONFIRM_TEMPLATE_ID=your_feedback_template_id
FEEDBACK_CONFIRM_PARAM_NAME=NAME

CAREERS_CONFIRM_TEMPLATE_ID=your_careers_template_id
CAREERS_CONFIRM_PARAM_NAME=NAME

CONTACT_CONFIRM_TEMPLATE_ID=your_contact_template_id
CONTACT_CONFIRM_PARAM_NAME=NAME

# Staff Notification Template
SMSIR_STAFF_TEMPLATE_ID=your_staff_notification_template_id
SMSIR_STAFF_PARAM_NAME=LINK

# =============================================
# SECURITY CONFIGURATION
# =============================================
# Generate a secure random string (min 32 characters)
OTP_SECRET=your_secure_32_character_or_longer_secret_key_here

# Admin panel credentials (use strong passwords!)
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD_HASH=your_bcrypt_hashed_password

# =============================================
# EMAIL CONFIGURATION
# =============================================
ADMIN_EMAIL=admin@yourdomain.com
FROM_EMAIL=noreply@yourdomain.com
REPLY_TO_EMAIL=info@yourdomain.com

# =============================================
# CORS & SECURITY
# =============================================
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT=100

# =============================================
# NOTIFICATION SETTINGS
# =============================================
STAFF_NOTIFY_MOBILE=09xxxxxxxxx

# Debug Mode (only for development)
DEBUG_MODE=false
